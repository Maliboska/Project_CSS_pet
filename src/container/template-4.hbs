<header class='header'>
	{{> logo}}
	<div class='header_nav'>{{>nav list=header}}</div>	
</header>
{{#with main}}
	<div class="hero">
		<img src="{{image}}" alt="Hero image" class="hero_img">
		<div class="hero_content">
			<h1 class="hero_title">{{heading}}</h1>
			<p class="hero_text">{{descriotion}}</p>
			{{> buttonHero}}
		</div>
	</div>
{{/with}}
<div class="featured">
	{{#each featured}}
		{{> cardFeatured}}
	{{/each}}
</div>
<div class="actions">
	{{#each actions}}
		<div class="actions_content">
			<h3 class="actions_title">{{heading}}</h3>
			{{> buttonForm}}
		</div>
	{{/each}}
</div>
<footer class="footer row">
	<div class="col-3">
		{{> logo}}
		<span class="footer_copyright">Copyright 2023</span>
	</div>
	{{#each footer}}
		<div class="col-3">
			<span class="footer_title">{{title}}</span>
			<span class="footer_links">{{>nav list=links isVertical=true}}</span>
		</div>
	{{/each}}
</footer>
