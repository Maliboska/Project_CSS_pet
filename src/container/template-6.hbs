<header class='header'>
	{{> logo}}
	<div class='header_nav'>
		{{>nav list=header}}
	</div>	
</header>

<main class="main">
	{{#with info}}
		<div class="info">
			<h3 class="info_title">{{title}}</h3>
			<p class="info_text">{{description}}</p>
		</div>
	{{/with}}
	{{#with form}}
		<div class="form">
			<div class="form_input_list">
				{{#each inputs}}
					<input type='{{type}}' class='form_input_item' placeholder='{{placeholder}}' name='{{name}}'/>
				{{/each}}
			</div>
			<div class="form_checkbox">
				<input type="checkbox" name="{{checkbox.name}}">
				<label for="{{checkbox.name}}">{{checkbox.label}}</label>
			</div>
			{{> buttonHero}}
			{{> line}}
			<span class="form_dscrp">{{info}}</span>
		</div>
	{{/with}}
</main>

<section class="updates">
	{{#with updates}}
		<h5 class="updates_title">{{title}}</h5>
		{{#each list}}
			<div class="updates_list">
				<span class="updates_item_logo  {{#if @first}}color_blue{{/if}} {{#if @last}}color_purple{{/if}}">32x32</span>
				<div class="updates_item">
					<p class="updates_item_name">{{nickname}}</p>
					<p class="updates_item_dscr">{{description}}</p>
				</div>		
			</div>
		{{/each}}
		<a href="{{show_all.url}}" class="updates_link">{{show_all.text}}</a>
	{{/with}}
</section>

<div class="expirience">
	{{#with expirience}}
		<span class="expirience_badge">{{badge}}</span>
		<h4 class="expirience_title">{{title}}</h4>
		<div class="expirience_cards">
			{{#each list}}
			<div class="expirience_list">
				<strong class="expirience_list_title">{{name}}</strong>
				<p class="expirience_list_text">{{details}}</p>
			</div>
			{{/each}}
		</div>
	{{/with}}
</div>

<footer class="footer row">
	<div class="col-3">
		{{> logo}}
		<span class="footer_copyright">Copyright 2023</span>
	</div>
	{{#each footer}}
		<div class="col-3">
			<span class="footer_title">
				{{title}}
			</span>
			<span class="footer_links">
				{{>nav list=links isVertical=true}}
			</span>
		</div>
	{{/each}}
</footer>